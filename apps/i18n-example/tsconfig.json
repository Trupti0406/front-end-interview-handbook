{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@gfe/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-i18nostic-env.d.ts",
    "src/mdx-components.jsx"
  ],
  "exclude": ["node_modules"]
}
